<Page
    x:Class="Heist.CollectionSort"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Heist"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SplitViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="Standard3100x260ItemTemplate" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <Grid Height="150">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding BookId}" Visibility="Collapsed" FontSize="16" Foreground="White"  Padding="10" Margin="10" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"/>
                    <TextBlock Text="{Binding BookName}" FontSize="26" TextWrapping="WrapWholeWords" Foreground="White"  Padding="10" Margin="10" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"/>
                    <TextBlock Text="{Binding ChapterNo}" TextWrapping="WrapWholeWords" FontSize="26" Foreground="White"  Padding="10" Margin="10" VerticalAlignment="Stretch" Grid.Column="1"  HorizontalAlignment="Stretch"/>
                    <RadioButton x:ConnectionId='1' IsChecked="{Binding sel}" FontSize="20"                               x:Name="radioButton" Grid.Column="2" Padding="10" Margin="10" Content="Select" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" GroupName="lol"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>


    <SplitView x:ConnectionId='2' x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 
               CompactPaneLength="50" OpenPaneLength="150" >
        <SplitView.Pane>
            <StackPanel >
                <Button x:ConnectionId='3' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Background="Transparent"                              />

                <RadioButton x:ConnectionId='4' x:Name="MenuButton2" Tag="" Style="{StaticResource SplitViewNavButtonStyle}" Content="Downloads"
                                                 />

                <RadioButton x:ConnectionId='5' x:Name="MenuButton3" Tag="" Content="Purchased" IsChecked="True" Style="{StaticResource SplitViewNavButtonStyle}"
                                                 />

                <RadioButton x:ConnectionId='6' x:Name="MenuButton7" Tag="" Content="Collections"
                         Style="{StaticResource SplitViewNavButtonStyle}"                          />

                <RadioButton x:ConnectionId='7' x:Name="MenuButton4" Tag="" Content="Store"
                         Style="{StaticResource SplitViewNavButtonStyle}"                          />


                <RadioButton x:ConnectionId='8' Tag="" Content="Wallet"  Style="{StaticResource SplitViewNavButtonStyle}"
                                          />

                <RadioButton x:ConnectionId='9' x:Name="MenuButton5" Tag="" Content="About" Style="{StaticResource SplitViewNavButtonStyle}"
                                                  />

                <RadioButton x:ConnectionId='10' x:Name="MenuButton6" Tag="" Content="SignOut"
                        Style="{StaticResource SplitViewNavButtonStyle}"                          />

            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="#292929">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="0.9*"/>
                    <ColumnDefinition Width="0.1*"/>

                </Grid.ColumnDefinitions>
                <TextBox x:ConnectionId='11' Grid.Column="2" x:Name="CollName" PlaceholderText="Enter collection name" Foreground="White" Height="35" Width="200" HorizontalAlignment="Left" Margin="20,20,0,0"/>
                <Image x:ConnectionId='12' Source="/Assets/white-arrowUp.png" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"                      />

                <Image x:ConnectionId='13' Source="/Assets/white-arrowDown.png" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"                        />
                
                <ListView x:ConnectionId='14'  
                       
                     Grid.Row="1"
          Grid.Column="2"
                    Grid.RowSpan="2"
                        HorizontalAlignment="Stretch"
                        x:Name="View"
                        VerticalAlignment="Stretch"
                        ItemsSource="{Binding}"                      
                    ItemTemplate="{StaticResource Standard3100x260ItemTemplate}"
                        SelectionMode="None"          
                        IsSwipeEnabled="false"
                        IsItemClickEnabled="True"
                      
                        ScrollViewer.HorizontalScrollMode="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollMode="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Visibility="Visible"
                      />
                <ProgressRing x:ConnectionId='15' Grid.ColumnSpan="4" Grid.RowSpan="4" x:Name="LoadingBar" Visibility="Collapsed" Height="40" Width="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </SplitView.Content>
    </SplitView>
    <Page.BottomAppBar>
        <AppBar x:ConnectionId='16' x:Name="Appbar" IsOpen="true" Visibility="Visible" IsSticky="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:ConnectionId='17' Name="NextBar" Icon="SelectAll" Label="Create"                      />
                <AppBarButton x:ConnectionId='18' Name="BackBar" Icon="Back" Label="Back"                      />
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
</Page>

