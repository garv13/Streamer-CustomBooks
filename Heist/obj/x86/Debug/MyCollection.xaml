<Page
    x:Class="Heist.MyCollection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Heist"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.Windows.PdfViewer"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SplitViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="Standard3100x260ItemTemplate" ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <Grid x:ConnectionId='1' HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="400" Margin="10,10" Background="#253375"                     >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="img" Source="Assets/BooksCollections.png" Height="100" Width="100" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock x:Name="title" Text="{Binding title}" TextWrapping="WrapWholeWords" FontSize="25" Margin="15,0,0,0" Foreground="White" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>


                    <TextBlock x:Name="authName" Text="{Binding authName}" FontSize="20" Foreground="White" Grid.Row="1" Grid.Column="1" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>
    
    <SplitView x:ConnectionId='2' x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 
               CompactPaneLength="50" OpenPaneLength="150" >
        <SplitView.Pane>
            <StackPanel >
                <Button x:ConnectionId='3' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Background="Transparent"                              />

                <RadioButton x:ConnectionId='4' x:Name="MenuButton2" Tag="" Style="{StaticResource SplitViewNavButtonStyle}" Content="Downloads"
                                                 />

                <RadioButton x:ConnectionId='5' x:Name="MenuButton3" Tag=""  Content="Purchased" Style="{StaticResource SplitViewNavButtonStyle}"
                                                 />

                <RadioButton x:ConnectionId='6' x:Name="MenuButton7" Tag="" Content="Collections" IsChecked="True"
                         Style="{StaticResource SplitViewNavButtonStyle}"                          />

                <RadioButton x:ConnectionId='7' x:Name="MenuButton4" Tag="" Content="Store"
                         Style="{StaticResource SplitViewNavButtonStyle}"                          />

                <RadioButton x:ConnectionId='8' Tag="" Content="Wallet"  Style="{StaticResource SplitViewNavButtonStyle}"
                                          />

                <RadioButton x:ConnectionId='9' x:Name="MenuButton5" Tag="" Content="About" Style="{StaticResource SplitViewNavButtonStyle}"
                                                  />

                <RadioButton x:ConnectionId='10' x:Name="MenuButton6" Tag="" Content="SignOut"
                        Style="{StaticResource SplitViewNavButtonStyle}"                          />

            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid Background="#292929">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.06*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='11' x:Name="TitlBox" Text="My Collections" Foreground="#CCCCCC" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,5,0,0"/>
                <TextBlock x:ConnectionId='12' x:Name="ErrorBox" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="15" HorizontalAlignment="Left" Visibility="Collapsed" Margin="15,10,0,0"/>
                <ProgressRing x:ConnectionId='13'  Grid.Row="2" x:Name="LoadingBar"/>

                <Grid Grid.Row="1">

                    <GridView x:ConnectionId='14'                    
                        HorizontalAlignment="Stretch"
                        x:Name="event1"
                        VerticalAlignment="Stretch"
                        ItemsSource="{Binding}"
                        ItemTemplate="{StaticResource Standard3100x260ItemTemplate}"
                        SelectionMode="None"          
                        IsSwipeEnabled="false"
                        IsItemClickEnabled="True"
                        ScrollViewer.HorizontalScrollMode="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollMode="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Visibility="Visible"
                      >
                    </GridView>


                    <GridView x:ConnectionId='15'
                        
                        HorizontalAlignment="Stretch"
                        x:Name="event2"
                        VerticalAlignment="Stretch"
                        ItemsSource="{Binding}"
                        ItemTemplate="{StaticResource Standard3100x260ItemTemplate}"
                        SelectionMode="None"          
                        IsSwipeEnabled="false"
                        IsItemClickEnabled="True"
                        ScrollViewer.HorizontalScrollMode="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollMode="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        Visibility="Collapsed"
                      >
                    </GridView>

                    <Grid x:ConnectionId='16' x:Name="PdfGrid" Visibility="Collapsed">
                        <syncfusion:SfPdfViewerControl x:ConnectionId='17' Name="pdfViewer" PageView="SinglePageView" ViewMode="OnePage"></syncfusion:SfPdfViewerControl>
                        <MediaElement x:ConnectionId='18' x:Name="mediaElement"/>
                        <ProgressRing x:ConnectionId='19' x:Name="LoadingBarPdf" Visibility="Collapsed" Height="40" Width="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </Grid>
            </Grid>
        </SplitView.Content>
    </SplitView>

    <Page.BottomAppBar>
        <AppBar x:ConnectionId='20' x:Name="Appbar" IsOpen="true" Visibility="Visible" IsSticky="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:ConnectionId='21' Name="CreateColl" Icon="Add" Label="Create New"                         />
                <AppBarButton x:ConnectionId='22' Name="PlayPdf" Icon="Play" Label="Listen Pdf" Visibility="Collapsed"                      />
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>

</Page>

